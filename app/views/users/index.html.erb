<div class="container">
    <div class="row">
        <h1>Hello Welocome !!</h1><br>
        <%# <div class="action col-sm-8 col-md-offset-2"> %>
            <%= link_to "New User" ,new_user_path , class: "btn btn-primary" %>
        <%# </div> %><br><br>
        <div class="container">
            <table class="table ">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Age</th>
                        <th colspan="3">Action</th>

                    </tr>
                </thead>
                <% @users.all.each do |user|%>
                    <tbody>
                        <tr>

                            <td>
                                <%= link_to user.name , user_path(user)%>
                            </td>
                            <td>
                                <%= user.email %>
                            </td>
                            <td>
                                <%= user.phone%>
                            </td>
                            <td>
                                <%= user.age%>
                            </td>
                            <td>
                                 <%= link_to "Edit" ,edit_user_path(user), class: "btn btn-primary" %>
                            </td>
                            <td>
                               <%= link_to "Delete" ,user_path(user) , method: :delete  , class: "btn btn-danger" %>
                           
                            </td>

                              <td>
                               <%= link_to "Selling Product" ,new_product_path(seller_id: user.id) ,  class: "btn btn-success" %>
                           
                            </td> 

                             <td>
                               <%= link_to "Buying Product" ,new_product_path(buyer_id: user.id) ,  class: "btn btn-success" %>
                            <%= link_to "Download" , download_path ,  class: "btn btn-success" %>
                           
                            </td> 


                        </tr>

                    </tbody>

                    <%end %>

            </table>
        </div>

    </div>
</div>